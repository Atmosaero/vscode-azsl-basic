{
  "scopeName": "source.azsl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#preprocessor" },
    { "include": "#attributes" },
    { "include": "#semantics" },
    { "include": "#declarations" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#members" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#srg" },
    { "include": "#builtins" },
    { "include": "#samplerBlock" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.azsl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.azsl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "members": {
      "patterns": [
        {
          "name": "variable.other.member.azsl",
          "match": "(?<=\\.)[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "support.type.user.pascal.azsl",
          "match": "(?<=\\bstruct\\s+)[A-Za-z_][A-Za-z0-9_]*\\b"
        },
        {
          "name": "entity.name.function.azsl",
          "match": "(?x)\\b(?!return\\b|if\\b|else\\b|for\\b|while\\b|switch\\b|case\\b|default\\b|do\\b|break\\b|continue\\b)\n                    ([A-Za-z_][A-Za-z0-9_]*)\\s*\\(",
          "captures": { "1": { "name": "entity.name.function.azsl" } }
        },
        {
          "name": "meta.scope.qualifier.azsl",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)::([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "support.class.azsl" },
            "2": { "name": "variable.other.member.azsl" }
          }
        }
      ]
    },
    "preprocessor": {
      "patterns": [
        {
          "name": "meta.preprocessor.include.azsl",
          "match": "^\\s*#\\s*(include)\\s*(<[^>]+>|\"[^\"\\n]+\")",
          "captures": {
            "1": { "name": "keyword.control.import.include.azsl" },
            "2": { "name": "string.quoted.other.include.azsl" }
          }
        },
        {
          "name": "meta.preprocessor.define.azsl",
          "match": "^\\s*#\\s*(define)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b(.*)$",
          "captures": {
            "1": { "name": "keyword.control.define.azsl" },
            "2": { "name": "entity.name.constant.preprocessor.azsl" },
            "3": { "name": "meta.definition.value.preprocessor.azsl" }
          }
        },
        {
          "name": "meta.preprocessor.other.azsl",
          "match": "^\\s*#\\s*(undef|if|ifdef|ifndef|elif|else|endif|error|pragma)\\b.*$",
          "captures": {
            "1": { "name": "keyword.control.preprocessor.azsl" }
          }
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.azsl",
          "match": "\\[\\[[^\\]]+\\]\\]"
        },
        {
          "name": "meta.attribute.single.azsl",
          "match": "\\[(?:unroll|loop|flatten|branch|allow_uav_condition)\\]"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(if|else|for|while|do|switch|case|default|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.azsl",
          "match": "\\b(cbuffer|tbuffer|struct|namespace|class|inline|static|const|groupshared|uniform|volatile|option|noperspective|void|precise)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type",
          "match": "\\b(float|float[1-4](x[1-4])?|half|min16float|double|int|int[1-4]|uint|uint[1-4]|bool)\\b"
        },
        {
          "name": "support.type.texture.azsl",
          "match": "\\b(Texture[1-3]D|TextureCube|RWTexture[1-3]D|RWTextureCube|Texture2DArray|RWTexture2DArray)\\b"
        },
        {
          "name": "support.type.sampler.azsl",
          "match": "\\b(Sampler|SamplerState|SamplerComparisonState)\\b"
        },
        {
          "name": "storage.type.matrix.azsl",
          "match": "\\b(matrix|float[1-4]x[1-4])\\b"
        },
        {
          "name": "support.type.atom.azsl",
          "match": "\\b(Surface|LightingData|ForwardPassOutput|DirectionalLight|SimplePointLight|PointLight|SimpleSpotLight|DiskLight)\\b"
        },
        {
          "name": "support.type.user.pascal.azsl",
          "match": "(?x)\\b([A-Z][A-Za-z0-9_]+)\\b(?=\\s+[A-Za-z_][A-Za-z0-9_]*\\s*[;=,\\)\\(])"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.azsl",
          "match": "\\b(0x[0-9A-Fa-f]+|\\d+(?:\\.\\d+)?(?:[eE][+-]?\\d+)?)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.azsl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.azsl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.azsl",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.sampler.azsl",
          "match": "\\b(Point|Filter|Linear|Wrap|Clamp|Border|Mirror|TransparentBlack|OpaqueWhite|Anisotropic|Min|Mag|Mip|Nearest)\\b"
        }
      ]
    },
    "semantics": {
      "patterns": [
        {
          "match": ":[ \\t]*([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "string.unquoted.semantic.azsl" }
          }
        }
      ]
    },
    "srg": {
      "patterns": [
        {
          "name": "entity.name.type.srg.azsl",
          "match": "\\bShaderResourceGroup\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*:\\s*(SRG_[A-Za-z0-9_]+)"
        },
        {
          "name": "support.class.srgbase.azsl",
          "match": "\\bSRG_[A-Za-z0-9_]+\\b"
        },
        {
          "name": "meta.srg.scope.azsl",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)::([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "entity.name.type.srg.azsl" },
            "2": { "name": "variable.other.member.srg.azsl" }
          }
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.azsl",
          "match": "\\b(mul|ddx|ddy|saturate|round|clamp|smoothstep|normalize|length|max|min|abs|dot|cross|pow|floor|ceil|frac|lerp|step)\\b"
        },
        {
          "name": "support.function.method.texture.azsl",
          "match": "\\b(Sample|SampleCmp|GetDimensions)\\b"
        },
        {
          "name": "variable.other.option.azsl",
          "match": "\\bo_[A-Za-z0-9_]+\\b"
        }
      ]
    },
    "samplerBlock": {
      "patterns": [
        {
          "name": "meta.sampler.block.azsl",
          "begin": "\\bSampler\\s+[A-Za-z_][A-Za-z0-9_]*\\s*\\{",
          "end": "\\};",
          "patterns": [
            {
              "name": "support.constant.property.sampler.azsl",
              "match": "\\b(MaxAnisotropy|MinFilter|MagFilter|MipFilter|ReductionType|AddressU|AddressV|AddressW|MinLOD|MaxLOD|MipLODBias|BorderColor)\\b"
            },
            {
              "name": "constant.language.sampler.value.azsl",
              "match": "\\b(Point|Linear|Filter|Wrap|Clamp|Mirror|TransparentBlack|OpaqueWhite)\\b"
            }
          ]
        }
      ]
    }
  }
}

